.new_project_video
 .fields
  = f.label :video_link
  -if !f.object.new_record?
   .flex-video{:class => f.object.origin}
   %iframe{:src => embed_link_from_origin(f.object.origin), :title => @project.title, :width => "320", :height => "240", :webkitAllowFullScreen => true, :mozallowfullscreen => true, :allowscriptaccess => "always",  :allowFullScreen => "true", :frameborder => "0"}
  = f.text_field :origin
  = f.hidden_field :provider_id
  = f.link_to_remove 'Remove this video'