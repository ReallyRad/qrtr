.project
 .project_title
  %h4
   =@project.title
   -@video=@project.videos.first
   -if !@video.nil?
    .flex-video{:class => @video.origin}
     %iframe{:src => embed_link_from_origin(@video.origin), :title => @project.title, :width => "320", :height => "240", :webkitAllowFullScreen => true, :mozallowfullscreen => true, :allowscriptaccess => "always",  :allowFullScreen => "true", :frameborder => "0"}
 .project_description
  %p
   =@project.description.bbcode_to_html.gsub("\n", "<br>").html_safe
 .project_image
  -if !@project.pictures.first.nil?
   %ul.small-block-grid-2
    -@project.pictures.each do |p|
     %li.project_image
      =image_tag p.image_url
