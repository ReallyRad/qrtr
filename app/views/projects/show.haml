.project
 .project_title
  %h4
   =@project.title
 .flex-video
  -if !@project.videos.first.nil?
   -@project.videos.each do |v|
    %iframe{:allowscriptaccess => "always", :allowFullScreen => "true", :frameborder => "0", :src => "http://www.youtube.com/embed/#{v.link}", :title => @project.title, :width => "800", :height => "600"}
 .project_description
  %p
   =@project.description.gsub("\n", "<br>").html_safe
 .project_image
  -if !@project.pictures.first.nil?
   %ul.small-block-grid-2
    -@project.pictures.each do |p|
     %li.project_image
      =image_tag p.image_url
