%ul.small-3.columns
 -@projects.each do |p|
  %li{:id => p.id, :class => "project"}
   %h4
    =p.title
   .project_image
    -if !p.pictures.first.nil?
     = link_to(image_tag(p.pictures.first.image_url), project_url(p.id))
   .project_description
    =truncate(p.description, :length => 150, :omission => "...")